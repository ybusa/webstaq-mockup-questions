%p= link_to "New Entity", new_entity_path

%table
  %thead
    %tr
      %th= Entity.human_attribute_name :first_name
      %th= Entity.human_attribute_name :last_name
      %th{:colspan => 3} actions
  
  %tbody
    - for entity in @entities
      %tr{ :class => cycle(:odd, :even) }
        %td= entity.first_name
        %td= entity.last_name
        %td.action= link_to 'show', entity
        %td.action= link_to 'edit', edit_entity_path(entity)
        %td.action= link_to 'destroy', entity, :confirm => 'Are you sure?', :method => :delete
